{
    "compilerOptions": {
        "outDir": "./dist/",
        "allowJs": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": false,
        "noImplicitReturns": false,
        "removeComments": true,
        "strictNullChecks": false,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "lib": [
            "es6",
            "es7",
            "dom"
        ]
    },
    "include": [
        "./src/**/*",
        "./types/**/*",
        "./webpack/*"
    ]
}
